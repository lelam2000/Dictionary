<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".infor.infor_ev"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/txt_hienthiev1"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="23dp"
        android:layout_gravity="center_vertical"
         />
        <ImageView
            android:id="@+id/phat_am"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_record_voice_over_24"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/txt_hienthiev2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_1"
        android:layout_marginTop="0dp"
        android:text=""
        android:textSize="20dp" />



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/nut_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:layout_marginBottom="10dp"

        android:src="@drawable/ic_baseline_thumb_up_alt_24"
        />
</RelativeLayout>